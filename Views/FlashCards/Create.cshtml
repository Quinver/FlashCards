@model FlashCards.Models.FlashCard
@{
    ViewData["Title"] = "Create Card";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post" class="row">
    <div class="col-sm-3">
        <label asp-for="Front" class="form-label"></label>
        <input asp-for="Front" class="form-control" required />
        <span asp-validation-for="Front" class="text-danger"></span>    
    </div>
    <div class="col-sm-3">
        <label asp-for="Back" class="form-label"></label>
        <input asp-for="Back" class="form-control" />
        <span asp-validation-for="Back" class="text-danger"></span>    
    </div>

    <div class="col align-self-end">
        <input type="hidden" asp-for="DeckId" />
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
