@model IEnumerable<FlashCards.Models.Deck>
@{
    ViewData["Title"] = "Home Page";
}

<h1>@ViewData["Title"]</h1>

<div>
   <a class="btn btn-primary" asp-action="Create">Create Deck</a> 
</div>

<table class="table">
    <thead>
        <tr>
            <th>Index</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Category</td>
                <td>                    
                    <a class="btn btn-warning" asp-controller="FlashCards" asp-action="ViewDeck" asp-route-deckId="@item.Id">View Deck</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    