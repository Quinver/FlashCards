@model FlashCards.Models.Deck
@{
    ViewData["Title"] = "Create Deck";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post" class="row">
    <div class="col-sm-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>    
    </div>
    <div class="col-sm-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>    
    </div>
    <div class="col-sm-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>    
    </div>

    <div class="col align-self-end">
        <input type="Submit" value="Create" class="btn btn-primary"></input>
    </div>
</form>

<a asp-action="ViewDeck" asp-route-deckId="@ViewBag.DeckId">Back to Deck</a>